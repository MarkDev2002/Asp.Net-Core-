@{
    ViewData["Title"] = "Product List";
}

<html>
<head>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #3498db;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        th {
            background-color: #3498db;
            color: white;
        }

        td {
            border-radius: 8px;
        }

        .actions {
            display: flex;
            gap: 10px;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Heading"]</h1>

    <p>
        <a href="/Product/Create" class="btn btn-primary">Add New Product</a>
    </p>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.ID</td>
                    <td>@p.Name</td>
                    <td>@p.Price.ToString("C")</td>
                    <td>
                        <div class="actions">
                            <a href="/Product/Edit/@p.ID" class="btn btn-warning">Edit</a>
                            <a href="/Product/Delete/@p.ID" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
